<MCard MaxWidth="400" class="mx-auto">
    <MContainer class="pa-1">
        <MItemGroup Multiple @bind-Values="selected">
            <MRow>
                @foreach (var item in items)
                {
                    <MCol Cols="12" Md="6">
                        <MItem>
                            <!-- TODO: Failed to read src from dynamic string -->
                            <MImage Src="@($"https://cdn.vuetifyjs.com/images/${item}")"
                                    Height="150"
                                    Class="text-right pa-2">
                                <MButton Icon Dark Click="@context.Toggle">
                                    <MIcon>@(context.IsActive ? "mdi-heart" : "mdi-heart-outline")</MIcon>
                                </MButton>
                            </MImage>
                        </MItem>
                    </MCol>
                }
            </MRow>
        </MItemGroup>
    </MContainer>
</MCard>

