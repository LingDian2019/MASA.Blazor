<MRow Justify="@JustifyTypes.Center">
    <MButton Color="primary" Click="() => dialog = true">Open Dialog</MButton>

    <MDialog @bind-Value="dialog"
             Scrollable
             MaxWidth="300">
        <MCard>
            <MCardTitle>Select Country</MCardTitle>
            <MDivider></MDivider>
            <MCardText Style="height: 300px;">
                <MCheckbox Label="Bahamas"></MCheckbox>
                <MCheckbox Label="Bahrain"></MCheckbox>
                <MCheckbox Label="Bangladesh"></MCheckbox>
                <MCheckbox Label="Barbados"></MCheckbox>
                <MCheckbox Label="Belarus"></MCheckbox>
                <MCheckbox Label="Belgium"></MCheckbox>
                <MCheckbox Label="Belize"></MCheckbox>
                <MCheckbox Label="Benin"></MCheckbox>
                <MCheckbox Label="Bhutan"></MCheckbox>
                <MCheckbox Label="Bolivia"></MCheckbox>
                <MCheckbox Label="Bosnia and Herzegovina"></MCheckbox>
                <MCheckbox Label="Botswana"></MCheckbox>
                <MCheckbox Label="Brazil"></MCheckbox>
                <MCheckbox Label="Brunei"></MCheckbox>
                <MCheckbox Label="Bulgaria"></MCheckbox>
                <MCheckbox Label="Burkina Faso"></MCheckbox>
                <MCheckbox Label="Burma"></MCheckbox>
                <MCheckbox Label="Burundi"></MCheckbox>
            </MCardText>
            <MDivider></MDivider>
            <MCardActions>
                <MButton Color="blue darken-1"
                         Text
                         Click="() => dialog = false">
                    Close
                </MButton>
                <MButton Color="blue darken-1"
                         Text
                         Click="() => dialog = false">
                    Save
                </MButton>
            </MCardActions>
        </MCard>
    </MDialog>
</MRow>

@code {
    bool dialog = false;
}