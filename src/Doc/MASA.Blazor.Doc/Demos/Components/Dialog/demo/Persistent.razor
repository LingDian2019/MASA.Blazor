<MRow Justify="@JustifyTypes.Center">
    <MButton Color="primary"
             Dark
             OnClick="() => _visible = true">
        Open Dialog
    </MButton>
    <MDialog @bind-Value="_visible"
             Persistent
             MaxWidth="290">
        <MCard>
            <MCardTitle>
                Use Google'location service?
            </MCardTitle>
            <MCardText>Let Google help apps determine location. This means sending anonymous location data to Google, even when no apps are running.</MCardText>
            <MCardActions>
                <MSpacer></MSpacer>
                <MButton Color="green darken-1"
                         Text
                         OnClick="() => _visible = false">
                    Disagree
                </MButton>
                <MButton Color="green darken-1"
                         Text
                         OnClick="() => _visible = false">
                    Agree
                </MButton>
            </MCardActions>
        </MCard>
    </MDialog>
</MRow>

@code {
    bool _visible = false;
}