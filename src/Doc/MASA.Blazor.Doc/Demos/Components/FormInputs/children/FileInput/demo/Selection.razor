@using BlazorComponent

<MFileInput
    @bind-Value="_files"
    Placeholder="Upload your documents"
    Label="File input"
    Multiple
    PrependIcon="mdi-paperclip"
  >
    <SelectionContent Context="index">
        <MChip
        Small
        Label
        Color="primary"
      >
        @_files[index].Name
      </MChip>
    </SelectionContent>
  </MFileInput>

  @code {
    private List<IBrowserFile> _files = new();
  }
