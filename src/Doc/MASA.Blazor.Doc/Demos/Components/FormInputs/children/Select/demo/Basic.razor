<MRow>
    <MCol Span="6">
        <MSelect @bind-Value="@value1"
                 Label="Standard"
                 Items="@items"
                 ItemText="u => u.Label"
                 ItemValue="u => u.Value">
        </MSelect>
    </MCol>
    <MCol Span="6">
        <MSelect @bind-Value="@value2"
                 Items="@items"
                 Label="Filled style"
                 ItemText="u => u.Label"
                 ItemValue="u => u.Value"
                 Filled>
        </MSelect>
    </MCol>

    <MCol Span="6">
        <MSelect @bind-Value="@value3"
                 Label="Outlined style"
                 Outlined
                 Items="@items"
                 ItemText="u => u.Label"
                 ItemValue="u => u.Value">
        </MSelect>
    </MCol>
    <MCol Span="6">
        <MSelect @bind-Value="@value4"
                 Label="Solo style"
                 Solo
                 Items="@items"
                 ItemText="u => u.Label"
                 ItemValue="u => u.Value">
        </MSelect>
    </MCol>
</MRow>

@code {
    private string value1 = "1";
    private string value2;
    private string value3;
    private string value4;

    string[] items2 = { "item 1", "item 2" };

    public class Item
    {
        public string Label { get; set; }
        public string Value { get; set; }
        public Item(string label, string value)
        {
            Label = label;
            Value = value;
        }
    }

    List<Item> items = new()
        {
            new Item("Item 1", "1"),
            new Item("Item 2", "2")
        };
}