@using BlazorComponent
<div>
    <MResponsive MaxWidth="400" Class="mx-auto mb-4">
        <MTextField @bind-Value="_benched"  Type="number" TValue="int" Label="Total Benched">
        </MTextField>
    </MResponsive>

    <MCard Elevation=6 MaxWidth=400 Class="mx-auto">
        <MVirtualScroll Height=300 Bench=@_benched ItemHeight=64 Items="Items">
            <ItemContent>
                <MListItem>

                    <MListItemAction>
                        <MButton Fab Small Depressed Color="primary">
                            @context
                        </MButton>
                    </MListItemAction>

                    <MListItemContent>
                        <MListItemTitle>
                            User Database Record <strong>ID @context</strong>
                        </MListItemTitle>
                    </MListItemContent>

                    <MListItemAction>
                        <MIcon Small>
                            mdi-open-in-new
                        </MIcon>
                    </MListItemAction>

                </MListItem>

                <MDivider></MDivider>

            </ItemContent>
        </MVirtualScroll>
    </MCard>
</div>




@code
{
    int _benched = 0;

    int length = 7000;

    int[] Items
    {
        get
        {
            int[] array = new int[length];
            for (var i = 0; i < length; i++)
            {
                array[i] = i + 1;
            }
            return array;
        }
    }
}