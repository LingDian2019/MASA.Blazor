<MContainer Fluid>
    <MCard Class="overflow-hidden">
        <MAppBar Collapse="!collapseOnScroll" CollapseOnScroll="collapseOnScroll" Absolute ScrollTarget="scrolling-sheet-1">
            <MAppBarNavIcon></MAppBarNavIcon>
            <MAppBarTitle>Collapse </MAppBarTitle>
            <MSpacer></MSpacer>
            <MCheckbox @bind-Checked="collapseOnScroll" Label="开关" Style=""></MCheckbox>
        </MAppBar>
        <MSheet Class="overflow-y-auto" Color="white" MaxHeight="600" Id="scrolling-sheet-1">
            <MContainer Style="height: 1000px;"></MContainer>
        </MSheet>
    </MCard>
</MContainer>

@code {
    bool collapseOnScroll = true;
}