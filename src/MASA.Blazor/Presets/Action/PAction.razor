@namespace MASA.Blazor.Presets
@inherits BDomComponentBase

<div style="width:100%" @ref="Ref">
    <MTooltip Top Disabled="TooltipDisabled">
        <ActivatorContent>
            <MButton Color="@Color"
                     Icon="@(_actionType == ActionTypes.Icon)"
                     Fab="@Fab"
                     Plain="@Plain"
                     Text="@Text"
                     Tile="@Tile"
                     Rounded="@Rounded"
                     Depressed="@Depressed"
                     Outlined="@Outlined"
                     Loading="@Loading"
                     Disabled="Disabled"
                     XSmall="@XSmall"
                     Small="@Small"
                     Large="@Large"
                     XLarge="@XLarge"
                     Click="HandleClick"
                     Style="@ActivatorStyle"
                     @attributes="context.Attrs">
                @switch (_actionType)
                {
                    case ActionTypes.Icon:
                        <MIcon>@Icon</MIcon>
                        break;
                    case ActionTypes.Label:
                        @Label
                        break;
                    default:
                        <MIcon Left>@Icon</MIcon>
                        @Label
                        break;
                }
            </MButton>
        </ActivatorContent>
        <ChildContent>
            @(Tip ?? Label)
        </ChildContent>
    </MTooltip>
</div>
